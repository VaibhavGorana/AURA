{
  "manifest_version": 3,
  "name": "Aura \u2013 In\u2011Page Assistant (Phase 4: Polish Pack)",
  "description": "Production-feel polish: markdown, copy, retry, per-site thread, stable intent, and UX fixes.",
  "version": "0.4.0",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Aura \u2013 Toggle Panel"
  },
  "commands": {
    "toggle-aura": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Toggle Aura panel"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "panel.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}